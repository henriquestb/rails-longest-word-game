<div class = "container text-center">
<h1>Welcome to the bertucci coach space</h1>
<h2>What's the longest word that u can find?</h2>
<% @letters.each do |letter| %>
  <div class="btn btn-primary active" aria-pressed="true" style="pointer-events: none"> <%= letter %> </div>
<% end %>
<form action="/score" method="post" class="mt-3" >
  <input type="text" name="score" placeholder="Try here?">
  <input class="btn btn-primary active" type="submit" value="tease me baby" >
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
<img src="" alt="">
</div>

